<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pes">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="611dp"
        android:hint="hint"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="141dp"
        android:layout_height="310dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="245dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_p"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/from_kg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="from_kg" />

        <RadioButton
            android:id="@+id/from_lb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="from_lb" />

        <RadioButton
            android:id="@+id/from_oz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="from_oz" />

        <RadioButton
            android:id="@+id/from_st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="from_st" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup4"
        android:layout_width="148dp"
        android:layout_height="304dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="251dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/radioGroup3"
        app:layout_constraintTop_toBottomOf="@+id/resultatp">

        <RadioButton
            android:id="@+id/to_kg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="to_kg" />

        <RadioButton
            android:id="@+id/to_lb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="to_lb" />

        <RadioButton
            android:id="@+id/to_oz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="to_oz" />

        <RadioButton
            android:id="@+id/to_st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="to_st" />
    </RadioGroup>

    <TextView
        android:id="@+id/resultatp"
        android:layout_width="127dp"
        android:layout_height="34dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="8dp"
        android:text="resultatp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_p" />

    <Button
        android:id="@+id/resultat_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="200dp"
        android:text="resultat_p"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/radioGroup3"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup4"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>